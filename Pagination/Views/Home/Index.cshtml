@using PagedList.Mvc
@model PagedList.IPagedList<Pagination.Models.UserViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Cosyn Software Development Services Team</h2>
<hr />
<div class="well">
    <div>
        @foreach (var item in Model)
        {
            @Html.DisplayFor(m => item.FirstName)<br />
            @Html.DisplayFor(m => item.LastName)<br />
            @Html.DisplayFor(m => item.Email)<br />
            @Html.DisplayFor(m => item.Address)<br />
            @Html.DisplayFor(m => item.Phone)<br />
        }
    </div><br />
    <div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @if (Model.HasPreviousPage)
        {
            @Html.ActionLink("<<", "Index", new { page = 1 })
            @Html.Raw(" ");
            @Html.ActionLink("< Prev", "Index", new { page = Model.PageNumber - 1 })
        }
        else
        {
            @:<<
            @Html.Raw(" ");
            @:< Prev
    }

        @if (Model.HasNextPage)
        {
            @Html.ActionLink("Next >", "Index", new { page = Model.PageNumber + 1 })
            @Html.Raw(" ");
            @Html.ActionLink(">>", "Index", new { page = Model.PageCount })
        }
        else
        {
            @:Next >
            @Html.Raw(" ")
            @:>>
    }
    </div>
</div>